@import "mixin.styl";

primary-border() {
    border: 1px solid #999;
    border-radius: 2px;
}

html,
body {
    background-color: #FFF;
    height: 100%;
    font-size: 13px;
    overflow: hidden !important;

    font-family: $font-family-text;
    line-height: 1.1;
    gradient-radial(#fafafa, #d9d9d9);
}

#main {
    width: 960px;
    margin: 0 auto;
}

.container {
    & > div {
        & + div {
            margin-top: 20px;
        }
        
        border: 1px solid #000;
        border-radius: 2px;
        padding: 20px;
    }
}

.scrollable-test {


    .scroll-container {
        position: relative;
        width: 300px;
        margin: 0 auto;
        primary-border();
    }

    .scroll-panel {
        overflow-y: hidden;
    }

    .scroll-content {
        vertical-align: middle;
        text-align: center;
        line-height: 300px;
    }

    .scroll-track {
        width: 6px;
        position: absolute;
        right: 1px;
        top: 0;
        bottom: 0;
    }

    .scroll-thumb {
        width: 6px;
        position: absolute;
        background-color: #F46700;
        &:hover {
            background-color: #b3b3b3;
        }
        transition: background-color .3s;
        border-radius: 3px;
    }
}

.trigger-test {
    .trigger {
        primary-border();
        display: inline-block;
        padding: 5px;
        cursor: pointer;

        position: relative;
    }

    .popup {
        position: absolute;
        bottom: 30px;
        primary-border();
        padding: 5px;
        z-index: 1;
        background-color: #FFFBED;

        display: none;
        &.active {
            display: block;
        }
    }
}