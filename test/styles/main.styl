@import "mixin.styl";

primary-border() {
    border: 1px solid #999;
    border-radius: 2px;
}

html,
body {
    background-color: #FFF;
    font-size: 13px;
    font-family: "Myriad Set Pro","Lucida Grande","Helvetica Neue","Helvetica","Arial","Verdana","sans-serif";
    line-height: 1.1;
    gradient-radial(#fafafa, #d9d9d9);
}

#main {
    width: 960px;
    margin: 0 auto;
    padding: 20px;
}

.container {
    & > div {
        & + div {
            margin-top: 20px;
        }
        
        border: 1px solid transparent;
        border-radius: 2px;
        padding: 20px;
        box-shadow: 0 0 5px rgba(0, 0, 0, .2);
        background-color: rgba(255, 255, 255, 0.3)

        & > h1 {
            font-size: 26px;
            font-weight: 600;
            text-align: left !important;
        }
    }
}

.scrollable-test {
    text-align: center;
    
    .scroll-vertical,
    .scroll-horizontal {
        position: relative;
        width: 300px;
        primary-border();
        display: inline-block;
        vertical-align: middle;
    }

    .scroll-panel {
        overflow: hidden;
    }

    .scroll-thumb {
        position: absolute;
        background-color: #F46700;
        transition: background-color .3s;
        border-radius: 3px;
        &:hover {
            background-color: #b3b3b3;
        }
    }

    .scroll-track {
        position: absolute;
    }
    
    .scroll-vertical {
        .scroll-content {
            vertical-align: middle;
            text-align: center;
            line-height: 300px;
        }

        .scroll-track {
            width: 6px;
            right: 3px;
            top: 0;
            bottom: 0;
        }

        .scroll-thumb {
            width: 6px;
        }
    }

    .scroll-horizontal {
        margin-left: 20px;
        height: 200px;

        .scroll-content {
            line-height: 200px;
            vertical-align: middle;
        }

        .scroll-track {
            height: 6px;
            right: 0;
            left: 0;
            bottom: 0px;
        }

        .scroll-thumb {
            height: 6px;
        }
    }

}

.trigger-test {
    .trigger {
        primary-border();
        display: inline-block;
        padding: 5px;
        cursor: pointer;

        position: relative;
        
        & + .trigger {
            margin-left: 10px;
        }
    }

    .popup {
        position: absolute;
        bottom: 30px;
        primary-border();
        padding: 5px;
        z-index: 1;
        background-color: #FFFBED;
        white-space: pre;
        left: -10px;

        display: none;
        &.active {
            display: block;
        }
    }
}

.draggable-test {
    .draggable-playground {
        width: 300px;
        height: 300px;
        primary-border();
        margin: 0 auto;
    }
}